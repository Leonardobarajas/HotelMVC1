@model IEnumerable<HotelMVC.Models.CEstados>

@{
    ViewBag.Title = "ESTADOS";
}

<h2>Estados</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>Descripción</th>
        <th>Categoría</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdEstado }) |           
            @Html.ActionLink("Borrar", "Delete", new { id=item.IdEstado })
        </td>
    </tr>
}

</table>
